---
interface Heading {
  depth: number;
  slug: string;
  text: string;
}

const { headings = [] } = Astro.props as { headings?: Heading[] };

const indentClassMap: Record<number, string> = {
  2: 'ml-0',
  3: 'ml-4',
  4: 'ml-8',
};
---
<nav class="mb-8">
  <h2 class="text-xl font-semibold mb-2">Contenido</h2>
  <ul class="list-none space-y-1">
    {headings.map((heading) => (
      <li>
        <a
          href={`#${heading.slug}`}
          class={`${indentClassMap[heading.depth] || ''} block hover:underline`}
        >
          {heading.text}
        </a>
      </li>
    ))}
  </ul>
</nav>
---
import { getSortedPosts } from '../lib/posts';

const posts = (await getSortedPosts()).slice(0, 3);
---

<section class="py-16 px-6 bg-gray-50">
  <div class="container mx-auto max-w-6xl">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-800">
        Últimos <span class="bg-clip-text text-transparent bg-gradient-to-r from-fuchsia-600 to-purple-700">artículos</span>
      </h2>
      <p class="text-lg text-gray-600 mt-4 max-w-2xl mx-auto">
        Descubre nuestros consejos sobre desarrollo web, SEO y diseño
      </p>
    </div>

    <!-- Contenedor con scroll horizontal en móvil -->
    <div class="relative">
      <!-- Scroll horizontal solo en móvil -->
      <div class="md:hidden pb-6 -mx-6 px-6 overflow-x-auto snap-x snap-mandatory scrollbar-hide">
        <div class="flex gap-6 w-max">
          {posts.map(post => (
            <article class="w-[85vw] min-w-[85vw] snap-center group bg-white rounded-xl border border-gray-200 overflow-hidden hover:shadow-lg transition-all duration-300 hover:-translate-y-1">
              <a href={`/blog/${post.slug}/`} class="block h-full flex flex-col">
                <div class="relative overflow-hidden h-48">
                  <img 
                    src={post.data.thumbnail} 
                    alt={post.data.title} 
                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" 
                    loading="lazy"
                    width="400"
                    height="300"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-black/30 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                  <div class="absolute bottom-0 left-0 w-full h-1 bg-gradient-to-r from-fuchsia-500 to-purple-600"></div>
                </div>
                
                <div class="p-6 flex-grow flex flex-col">
                  <div class="flex items-center gap-2 mb-3">
                    <span class="text-xs font-medium px-2 py-1 bg-purple-100 text-purple-700 rounded-full">
                      {Array.isArray(post.data.tema)
                        ? post.data.tema.join(', ')
                        : post.data.tema}
                    </span>
                    <span class="text-xs text-gray-500">
                      {new Date(post.data.date).toLocaleDateString('es-ES', { year: 'numeric', month: 'long', day: 'numeric' })}
                    </span>
                  </div>
                  
                  <h3 class="text-xl font-bold text-gray-800 mb-3 group-hover:text-purple-700 transition-colors">
                    {post.data.title}
                  </h3>
                  
                  <p class="text-gray-600 mb-4 line-clamp-2">
                    {post.data.summary}
                  </p>
                  
                  <div class="mt-auto flex items-center text-purple-600 group-hover:text-purple-800 transition-colors">
                    <span class="font-medium">Leer más</span>
                    <svg class="w-4 h-4 ml-1 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </div>
                </div>
              </a>
            </article>
          ))}
        </div>
      </div>

      <!-- Grid normal en desktop -->
      <div class="hidden md:grid md:grid-cols-3 gap-8">
        {posts.map(post => (
          <article class="group bg-white rounded-xl border border-gray-200 overflow-hidden hover:shadow-lg transition-all duration-300 hover:-translate-y-1">
            <a href={`/blog/${post.slug}/`} class="block h-full flex flex-col">
              <div class="relative overflow-hidden h-48">
                <img 
                  src={post.data.thumbnail} 
                  alt={post.data.title} 
                  class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" 
                  loading="lazy"
                  width="400"
                  height="300"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/30 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                <div class="absolute bottom-0 left-0 w-full h-1 bg-gradient-to-r from-fuchsia-500 to-purple-600"></div>
              </div>
              
              <div class="p-6 flex-grow flex flex-col">
                <div class="flex items-center gap-2 mb-3">
                  <span class="text-xs font-medium px-2 py-1 bg-purple-100 text-purple-700 rounded-full">
                    {Array.isArray(post.data.tema)
                      ? post.data.tema.join(', ')
                      : post.data.tema}
                  </span>
                  <span class="text-xs text-gray-500">
                    {new Date(post.data.date).toLocaleDateString('es-ES', { year: 'numeric', month: 'long', day: 'numeric' })}
                  </span>
                </div>
                
                <h3 class="text-xl font-bold text-gray-800 mb-3 group-hover:text-purple-700 transition-colors">
                  {post.data.title}
                </h3>
                
                <p class="text-gray-600 mb-4 line-clamp-2">
                  {post.data.summary}
                </p>
                
                <div class="mt-auto flex items-center text-purple-600 group-hover:text-purple-800 transition-colors">
                  <span class="font-medium">Leer más</span>
                  <svg class="w-4 h-4 ml-1 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              </div>
            </a>
          </article>
        ))}
      </div>
    </div>

    <div class="text-center mt-12">
      <a 
        href="/blog" 
        class="inline-flex items-center justify-center bg-white hover:bg-gray-50 text-purple-700 font-bold py-3 px-6 rounded-lg transition border-2 border-purple-200 shadow-sm hover:shadow-md"
      >
        Ver todos los artículos
        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
        </svg>
      </a>
    </div>
  </div>
</section>

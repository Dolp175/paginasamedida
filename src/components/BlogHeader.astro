---
interface Props {
  title: string;
  image: string;
  date: Date;
  readingTime: string;
}

const { title, image, date, readingTime } = Astro.props as Props;
---

<header class="mb-12">
  <div class="bg-gradient-to-r from-purple-900 to-fuchsia-800 py-16 px-6 text-center text-white">
    <div class="max-w-3xl mx-auto">
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6 leading-tight">{title}</h1>
      <div class="flex justify-center items-center gap-4 text-purple-200 text-sm">
        <time datetime={date.toISOString()}>{date.toLocaleDateString('es-ES', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
        <span class="w-1 h-1 bg-purple-400 rounded-full"></span>
        <span>{readingTime}</span>
      </div>
    </div>
  </div>
  
  <div class="max-w-4xl mx-auto px-6 -mt-12">
    <img 
      src={image} 
      alt={title} 
      class="w-full h-auto max-h-96 object-cover rounded-xl shadow-lg border-4 border-white"
      loading="eager"
      width="800"
      height="450"
    />
  </div>
</header>

---
interface Props {
  src: string;
  alt: string;
  caption?: string;
}

const { src, alt, caption } = Astro.props as Props;
---

<figure class="my-8">
  <img 
    src={src} 
    alt={alt} 
    class="w-full h-auto rounded-lg shadow-md border border-gray-200"
    loading="lazy"
  />
  {caption && (
    <figcaption class="text-center text-sm text-gray-500 mt-2">
      {caption}
    </figcaption>
  )}
</figure>

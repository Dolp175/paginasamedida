---
const { icon, title, text } = Astro.props;
---

<div
  class="bg-white p-8 rounded-xl border border-gray-200 hover:shadow-xl hover:-translate-y-1 hover:scale-105 transition transform duration-300 group"
>
  <div
    class="w-12 h-12 mb-4 rounded-full bg-white border-2 border-purple-200 flex items-center justify-center text-purple-700 shadow-sm group-hover:border-fuchsia-300 group-hover:text-fuchsia-700 transition duration-300"
    set:html={icon}
  >
  </div>
  <h3 class="text-xl font-bold mb-3 text-gray-800">{title}</h3>
  <p class="text-gray-600" set:html={text}></p>
</div>

---
// components/BlogComparison.astro
interface Props {
  title?: string;
  items: {
    pros: string[];
    cons: string[];
  };
}
const { title, items } = Astro.props;
---
<div class="border border-gray-200 rounded-lg p-6 my-6">
  {title && <h3 class="font-bold text-lg mb-4 text-purple-800">{title}</h3>}
  <div class="grid md:grid-cols-2 gap-6">
    <div>
      <h4 class="font-semibold text-green-600 mb-3 flex items-center">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
        Ventajas
      </h4>
      <ul class="space-y-2">
        {items.pros.map(item => (
          <li class="flex items-start">
            <span class="text-green-500 mr-2">•</span>
            {item}
          </li>
        ))}
      </ul>
    </div>
    <div>
      <h4 class="font-semibold text-red-600 mb-3 flex items-center">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
        Limitaciones
      </h4>
      <ul class="space-y-2">
        {items.cons.map(item => (
          <li class="flex items-start">
            <span class="text-red-500 mr-2">•</span>
            {item}
          </li>
        ))}
      </ul>
    </div>
  </div>
</div>
---
import Layout from "../../layouts/Layout.astro";
import { getSortedPosts } from "../../lib/posts";

const posts = await getSortedPosts();
const postsPerPage = 6;
const pagePosts = posts.slice(0, postsPerPage);
const totalPages = Math.ceil(posts.length / postsPerPage);
const currentPage = 1;
const title = "Blog | Páginas a Medida";
const description = "Artículos y consejos sobre desarrollo web, SEO y tecnología.";
const canonical = new URL(Astro.url.pathname, Astro.site).toString();
const keywords = "blog, desarrollo web, seo, tecnología";
---

<Layout {title} {description} {canonical} {keywords}>
  <section class="py-16 px-6 bg-white">
    <div class="container mx-auto max-w-5xl">
      <h1 class="text-4xl font-bold mb-8 text-gray-800">Blog</h1>
      <ul class="grid md:grid-cols-2 gap-8">
        {pagePosts.map(post => (
          <li class="border border-gray-200 rounded-xl shadow-md overflow-hidden">
            <a href={`/blog/${post.slug}/`} class="block">
              <img src={post.data.thumbnail} alt={post.data.title} class="w-full h-48 object-cover" loading="lazy" />
              <div class="p-6">
                <h2 class="text-2xl font-semibold mb-2 text-gray-800">{post.data.title}</h2>
                <p class="text-gray-600 mb-4">{post.data.description}</p>
                <div class="text-sm text-gray-500 flex gap-2">
                  <time datetime={post.data.date.toISOString()}>{post.data.date.toLocaleDateString('es-ES')}</time>
                  <span>·</span>
                  <span>{post.data.readingTime}</span>
                </div>
              </div>
            </a>
          </li>
        ))}
      </ul>
      {totalPages > 1 && (
        <nav class="flex justify-center mt-12 gap-4">
          {Array.from({ length: totalPages }).map((_, i) => (
            <a
              href={i === 0 ? '/blog/' : `/blog/page/${i + 1}/`}
              class={`px-4 py-2 rounded ${i + 1 === currentPage ? 'bg-purple-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300'}`}
              aria-current={i + 1 === currentPage ? 'page' : undefined}
            >
              {i + 1}
            </a>
          ))}
        </nav>
      )}
    </div>
  </section>
</Layout>

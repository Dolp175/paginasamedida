---
interface Heading {
  depth: number;
  slug: string;
  text: string;
}

const { headings = [] } = Astro.props;
---

<nav class="sticky top-0 lg:top-8 z-10 bg-white lg:bg-transparent shadow-sm lg:shadow-none">
  <!-- Versión móvil (siempre visible) -->
  <div class="lg:hidden px-4 py-3 border-b border-gray-200">
    <details class="group" open>
      <summary class="flex items-center justify-between cursor-pointer list-none">
        <h2 class="text-lg font-bold text-purple-800 flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
          Índice de contenido
        </h2>
        <svg class="w-5 h-5 text-gray-500 transform transition-transform duration-200 group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </summary>
      <div class="mt-3 pl-2 max-h-[50vh] overflow-y-auto">
        <ul class="space-y-2 border-l-2 border-purple-100 pl-4">
          {headings.map((heading) => (
            <li class={`ml-${heading.depth - 2}`}>
              <a
                href={`#${heading.slug}`}
                class="block py-1.5 text-sm text-gray-600 hover:text-purple-700 hover:underline hover:underline-offset-4 relative pl-3 before:absolute before:left-0 before:top-1/2 before:-translate-y-1/2 before:w-2 before:h-2 before:rounded-full before:bg-purple-200 before:transition-all before:opacity-0 hover:before:opacity-100 hover:before:bg-purple-500"
              >
                {heading.text}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </details>
  </div>

  <!-- Versión desktop (sticky) -->
  <div class="hidden lg:block">
    <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
      <h2 class="text-lg font-bold text-purple-800 mb-4 flex items-center gap-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
        Índice de contenido
      </h2>
      <ul class="space-y-3 border-l-2 border-purple-100 pl-4">
        {headings.map((heading) => (
          <li class={`ml-${heading.depth - 2}`}>
            <a
              href={`#${heading.slug}`}
              class="block py-1.5 text-sm text-gray-600 hover:text-purple-700 hover:underline hover:underline-offset-4 relative pl-3 before:absolute before:left-0 before:top-1/2 before:-translate-y-1/2 before:w-2 before:h-2 before:rounded-full before:bg-purple-200 before:transition-all before:opacity-0 hover:before:opacity-100 hover:before:bg-purple-500"
            >
              {heading.text}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </div>
</nav>
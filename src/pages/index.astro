<script type="module">
  const grid = document.getElementById('portfolio');
  const box  = document.getElementById('lightbox');
  const img  = document.getElementById('lb-img');
  const t    = document.getElementById('lb-title');
  const s    = document.getElementById('lb-sub');
  const btnX = document.getElementById('lb-close');
  const prev = document.getElementById('lb-prev');
  const next = document.getElementById('lb-next');

  const thumbs = Array.from(grid.querySelectorAll('img[data-full]'));
  let idx = 0;

  // Quitar blur de thumbs al cargar
  thumbs.forEach(th => {
    const unblur = () => th.classList.remove('blur-[2px]');
    if (th.complete) unblur();
    else th.addEventListener('load', unblur, { once: true });
  });

  function openAt(i) {
    idx = (i + thumbs.length) % thumbs.length;
    const el = thumbs[idx];
    const full1x = el.dataset.full;
    const full2x = el.dataset.full2x || full1x;

    img.srcset = `${full1x} 1x, ${full2x} 2x`;
    img.src = full1x;
    img.alt = el.alt;
    t.textContent = el.dataset.title || '';
    s.textContent = el.dataset.subtitle || '';

    box.classList.remove('hidden');
    box.classList.add('flex');
    document.body.style.overflow = 'hidden';
    document.addEventListener('keydown', onKey);
  }

  function closeBox() {
    box.classList.add('hidden');
    box.classList.remove('flex');
    document.body.style.overflow = '';
    document.removeEventListener('keydown', onKey);
  }

  function onKey(e){
    if (e.key === 'Escape') closeBox();
    if (e.key === 'ArrowRight') openAt(idx+1);
    if (e.key === 'ArrowLeft') openAt(idx-1);
  }

  // Click en cualquier parte de la tarjeta
  grid.addEventListener('click', (e) => {
    const card = e.target.closest('article');
    if (!card || !grid.contains(card)) return;
    const el = card.querySelector('img[data-full]');
    if (!el) return;
    openAt(thumbs.indexOf(el));
  });

  btnX.addEventListener('click', closeBox);
  box.addEventListener('click', (e) => { if (e.target === box) closeBox(); });
  prev.addEventListener('click', () => openAt(idx-1));
  next.addEventListener('click', () => openAt(idx+1));

  // --- Swipe t√°ctil (izq/der para navegar, abajo para cerrar) ---
  let x0 = null, y0 = null, dx = 0, dy = 0;
  const SWIPE_X = 60;     // px m√≠nimos horizontales
  const SWIPE_Y = 80;     // px para cerrar hacia abajo

  function touchStart(e){
    if (!box || box.classList.contains('hidden')) return;
    const t = e.touches && e.touches[0]; if (!t) return;
    x0 = t.clientX; y0 = t.clientY; dx = 0; dy = 0;
  }
  function touchMove(e){
    if (x0 == null) return;
    const t = e.touches && e.touches[0]; if (!t) return;
    dx = t.clientX - x0; dy = t.clientY - y0;
    // No hacemos preventDefault para permitir pan vertical (gracias a touch-pan-y)
  }
  function touchEnd(){
    if (x0 == null) return;
    // Navegaci√≥n horizontal prioritaria
    if (Math.abs(dx) > SWIPE_X && Math.abs(dx) > Math.abs(dy)){
      if (dx < 0) openAt(idx+1); else openAt(idx-1);
    } else if (dy > SWIPE_Y) {
      // swipe hacia abajo: cerrar
      closeBox();
    }
    x0 = y0 = null; dx = dy = 0;
  }
  img.addEventListener('touchstart', touchStart, { passive: true });
  img.addEventListener('touchmove',  touchMove,  { passive: true });
  img.addEventListener('touchend',   touchEnd,   { passive: true });
  img.addEventListener('touchcancel',touchEnd,   { passive: true });
</script>






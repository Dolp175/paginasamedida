---
import { slugify } from '../lib/slugify';

interface Props {
  title: string;
  level?: number;
}

const { title, level = 2 } = Astro.props as Props;
const id = slugify(title);
const HeadingTag = `h${level}` as const;
---

<section id={id} class="mb-12 scroll-mt-16">
  <HeadingTag class="text-2xl font-bold mb-6 text-purple-800 flex items-center gap-3 before:content-[''] before:w-3 before:h-3 before:bg-purple-600 before:rounded-full">
    {title}
  </HeadingTag>
  <div class="prose prose-lg max-w-none">
    <slot />
  </div>
</section>
